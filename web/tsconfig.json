{
    "compilerOptions": {
        "esModuleInterop": true,
        "jsx": "react",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "ESNext"
        ],
        "strict": true,
        "sourceMap": true,
        "target": "ESNext",
        "baseUrl": ".",
        "paths": {
            "@components/*" : ["./src/components/*"],
            "@assets/*" : ["./src/assets/*"],
            "@routes/*" : ["./src/routes/*"],
            "@root/*" : ["./src/*"],
            "@lib/*": ["./src/lib/*"]
        },
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "exclude": [
        "node_modules"
    ]
}